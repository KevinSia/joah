<h1>Login</h1>

<%= form_tag '/sign_in' do %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>

<%= button_to "Sign in with FB", "/auth/facebook", :class => "btn btn-default", :method => :get %>
<%= link_to 'Twitter', '/auth/twitter' %>