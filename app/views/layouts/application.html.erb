<!DOCTYPE html>
<html>
  <head>
    <title>Joah</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
	  <% if current_user %>
	    Signed in as <%= current_user.full_name %> | <%= link_to 'Log Out', sign_out_path, method: :delete %>
	  <% else %>
	    <%= link_to 'Login', '/sign_in' %> | <%= link_to 'Signup', '/sign_up' %>
	  <% end %>

	  <div class="container">
      <%= flash_messages %>
      <%= yield %>
    </div>
   
  </body>
</html>
