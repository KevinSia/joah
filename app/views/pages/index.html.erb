<h1>JOAHH</h1>

<%= form_tag(products_path, :method => "get") do %>
  <%= label_tag(:search, "Search:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag "Search", :name => nil %>
<%end%>

<div class="container">
	<div class="row">
	   <div class="col-md-12">
		<% @products.each do |l| %>
	     <div class="column">
	       <div class="col-sm-6 col-md-4">
	         <div class="thumbnail">
	        
	           <div class="caption">
	             <h4><%= link_to l.title, product_path(l.id) %></h4>
	             <p><span class="price">RM<%= l.price %></span></p>		
	             <p><a href="/listings/<%=l.id%>" class="btn btn-primary" role="button">Book now</a></p>
	           </div>
	         </div>
	       </div>
	     </div>
		<% end %>
	   </div>
	</div>
</div>
<%= will_paginate @products, previous_label: "Back", next_label: "More", inner_window: 1, outer_window: 0 %>