<h1 style="margin:auto;text-align: center">JOAHH</h1>

<div class="container">

<%= form_tag(products_path, :method => "get") do %>
  <%= label_tag(:search, "Search:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag "Search", :name => nil %>
<%end%>
<br>

	<div class="row">
	   <div class="col-md-12">
		<% @products.each do |p| %>
	     <div class="column">
	       <div class="col-sm-6 col-md-4">
	         <div class="thumbnail">
		        <% if p.photos? %>
		        <img><%= image_tag p.photos.first.medium, class:"img-response" %></img>
		        <% else %> 
		          <img src="..." alt="...">
		        <%end%>
	           <div class="caption">
	             <h4><%= link_to p.title, product_path(p.id) %></h4>
	             <p><span class="price">RM<%= p.price %></span></p>		
	             <p><a href="/products/<%=p.id%>" class="btn btn-primary" role="button">BUY</a></p>
	           </div>
	         </div>
	       </div>
	     </div>
		<% end %>
	   </div>
	</div>
</div>
<%= will_paginate @products, renderer: BootstrapPagination::Rails, previous_label: "Back", next_label: "More", inner_window: 1, outer_window: 0 %>