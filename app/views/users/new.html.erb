<div class="container">
	<h1>Signup</h1>

	<%= form_for :user, url: '/users', id: 'signup-form' do |f| %>

	  Name: <%= f.text_field :full_name, required: true %><br>
	  Email: <%= f.text_field :email, required: true %><br>
	  Password: <%= f.password_field :password, required: true %><br>
	  <%= f.submit "Submit", class: "btn btn-default" %>

	<% end %>
</div>

