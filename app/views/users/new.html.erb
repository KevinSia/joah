<div class="container" style="border:solid;padding: 20px; text-align: center;width: 30%; height:50%">
	<h1>Signup</h1>

   <div class="col-sm-12 col-md-12 col-lg-12">
	<%= form_for :user, url: '/users', id: 'signup-form', :validate=>true do |f| %>
	  <div class="form-group">
		  Name: <%= f.text_field :full_name, required: true %><br>
	  </div>
	  
	  <div class="form-group">
		  Email: <%= f.text_field :email, required: true %><br>
	  </div>

	  <div class="form-group">
		  Password: <%= f.password_field :password, required: true %><br>
	  </div>

	  <div class="submit-field">
		  <%= f.submit "Submit", class: "btn btn-default" %>
	  </div>

	<% end %>
	</div>
</div>

