<div class="container">
  <h1>Welcome <%= @user.full_name %></h1>
  <div><%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-primary"%></div><br>
  <div><%= link_to "Sell", new_product_path, class:"btn btn-primary" %></div><br>

     <div class="row">
        <div class="col-md-12">
       <% @user.products.each do |p| %>
        
          <div class="column">
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
             
                <div class="caption">
                  <h4><%= link_to p.title, product_path(p.id) %></h4>
                  <p><span class="price">RM<%= p.price %></span></p>   

                  <div><%= link_to "Edit", edit_product_path(p), class:"btn btn-primary"%></div><br>
                </div>
              </div>
            </div>
          </div>
       <% end %>
     </div>
</div>    
